@{
    ViewBag.Title = "Home Page";
}
<div class="container-full">

    <header class="masthead">

        <h1>Nova Town</h1>
        <h3>Don't go to school, come to school.</h3>

    </header>


<section class="intro">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-4 text-center">
                <div class="service-box">
                    <i class="fas fa-5x fa-gamepad" style="color:#b55d1e"></i>
                    <h3>Play Game</h3>
                    <p class="text-muted">Student report and game. <br/>How to view and play.</p>
                    <p>
                        @Html.ActionLink("Student Intro", "StudentIntro", "Home", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
            <div class="col-sm-4 col-sm-4 text-center">
                <div class="service-box">
                    <i class="fas fa-5x fa-file-alt" style="color:#b55d1e"></i>
                    <h3>Build Reports</h3>
                    <p class="text-muted">Admin attendance reports. <br />How to view and modify. </p>
                    <p>
                        @Html.ActionLink("Admin Intro", "AdminIntro", "Home", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
            <div class="col-sm-4 col-sm-4 text-center">
                <div class="service-box">
                    <i class="fas fa-5x fa-laptop" style="color:#b55d1e"></i>
                    <h3>Login to Kiosk</h3>
                    <p class="text-muted">Daily kiosk.<br /> How to login.</p>
                    <p>
                        @Html.ActionLink("Kiosk Intro", "KioskIntro", "Home", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
           
        </div>
    </div>
</section>

<section class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="section-heading">We make school fun!</h1>
            </div>
        </div>
    </div>
</section>
</div>
