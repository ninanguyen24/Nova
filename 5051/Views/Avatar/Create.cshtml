@model _5051.Models.AvatarModel

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row">
        <h2>Create Avatar</h2>
        <br />
        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Name)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Description)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Description)
                    @Html.ValidationMessageFor(m => m.Description)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Uri)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Uri)
                    @Html.ValidationMessageFor(m => m.Uri)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Level)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Level)
                    @Html.ValidationMessageFor(m => m.Level)
                </div>
            </div>

            <br />
            <br />
            <div class="row">
                <div class="col-sm-3 text-right">
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
                    <input type="submit" value="Create" class="btn btn-primary">
                </div>
            </div>




        }
    </div>
    </div>
