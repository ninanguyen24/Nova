<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nova Town Attendance Platform</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link rel="icon" href="/Content/img/sitelogo.png">
</head>
<body>
    <header class="nav-wrapper">
        <nav class="navbar-custom">
            <div class="container-full">

                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar navbar-inverse navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bm-navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bm-navbar">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Student", "Login", "Portal")</li>
                        <li>@Html.ActionLink("Admin", "AdminLogin", "Portal")</li>
                        <li>@Html.ActionLink("Kiosk Mode", "Landing", "Kiosk")</li>
                        <li>@Html.ActionLink("Nova Town", "Index", "Home", new { area = "" }, new { @class = "navbar-brand hidden-xs" })</li>
                    </ul>
                </div><!-- End navbar-collapse -->

            </div><!-- End container -->
        </nav>
    </header>

    <div class="body-content">
        @RenderBody()
    </div>


    <!-- Footer -->

    <footer>
        <div class="footer">

            <div style="background-color: #5f5851;">

                <!-- Grid row-->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-lg-12 text-center">
                        @Html.ActionLink("About", "About", "Home", new { controller = "Home" }, new { @class = "btn btn-link" }) &sdot;
                        @Html.ActionLink("Privacy Policy", "Privacy", "Home", new { controller = "Home" }, new { @class = "btn btn-link" }) &sdot;
                        @Html.ActionLink("Contact", "Contact", "Home", new { controller = "Home" }, new { @class = "btn btn-link" })
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->

                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p class="copyright text-muted small">&nbsp;&nbsp;&copy; @DateTime.Now.Year - Nova Town, all rights reserved. This website is made with <i class="fa fa-heart" aria-hidden="true"></i> by Fab5.</p>

                </div>
            </div>
        </div>
    </footer>

</body>
</html>
