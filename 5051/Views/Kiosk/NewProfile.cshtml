@model _5051.Models.StudentModel

@{
    ViewBag.Title = "Kiosk Mode - New Student Profile";
}

<div class="container-fluid" id="kioskbackground">
    
    <div class="row text-center"><h1>Create a new profile.</h1></div>
        <div class="kioskModule col-md-4 col-md-offset-4 col-sm-12">

            <div class="row">
                @Html.ActionLink("< Back", "Index", "Kiosk", null, new { @class = "btn btn-primary" })
            </div>
            <div class="row">

                @using (Html.BeginForm())
                {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="col-md-6 col-md-offset-3">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Enter your Name" />
                        </div>
                        <p>@Html.ValidationMessageFor(m => m.Name)</p>
                    </div>

                    <div class="form-group">
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-camera fa" aria-hidden="true"></i></span>
                                @Html.DropDownListFor(m => m.AvatarId, _5051.Backend.AvatarBackend.Instance.GetAvatarListItem(Model.AvatarId))
                            </div>
                            <h4>@Html.ValidationMessageFor(m => m.AvatarId)</h4>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-smile fa" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" name="username" id="username" placeholder="Enter your Username" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" name="passphase" id="passphase" placeholder="Enter your Passphase" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="cols-sm-12">
                            <input type="submit" value="Create" class="btn btn-success btn-lg btn-block kioskbtn"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
