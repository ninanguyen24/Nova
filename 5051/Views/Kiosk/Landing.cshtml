@model _5051.Models.StudentViewModel

@{
    ViewBag.Title = "Kiosk Mode - New Student Profile";
}
<link rel="stylesheet" type="text/css" href="/Content/Login.css" />
<div class="background2">
    <div class="row">
        <div class="form">

            <div class="row">
                <div class="col-lg-12">
                    <h1>Enter admin passphase to unlock Kiosk Mode.</h1>
                </div>

            </div>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="cols-md-8 col-md-offset-2 text-center">
                        <div class="input-group">
                            <input type="text" class="form-control" name="passphase" id="passphase" placeholder="Enter your Passphase" />

                        </div>
                        <div class="form-group">
                                <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                </div>

                <p>@Html.ValidationMessage("Error")</p>
            }

        </div>
        </div>

    </div>
